<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="ANIMAL GAME!"
            android:id="@+id/tittle"
            android:layout_marginTop="40dp"
            android:textColor="#5c86ab"
            android:textSize="35sp"
            android:gravity="center"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:gravity="center">

                <ImageButton
                    android:id="@+id/pig"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/pig" />

                <ImageButton
                    android:id="@+id/dog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/dog" />

                <ImageButton
                    android:id="@+id/duck"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/duck" />

                <ImageButton
                    android:id="@+id/frog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/frog" />

                <ImageButton
                    android:id="@+id/zebra"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/zebra" />

                <ImageButton
                    android:id="@+id/cow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/cow" />
            </TableRow>

            <TableRow
                android:gravity="center">

                <ImageButton
                    android:id="@+id/gorilla"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/gorilla" />

                <ImageButton
                    android:id="@+id/buffalo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/buffalo" />

                <ImageButton
                    android:id="@+id/chick"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/chick" />

                <ImageButton
                    android:id="@+id/chicken"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/chicken" />

                <ImageButton
                    android:id="@+id/snake"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/snake" />

                <ImageButton
                    android:id="@+id/owl"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/owl" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/selected"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pig"
        />

        <TextView
            android:id="@+id/highscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HighScore: "
            android:textAlignment="center"
            android:textSize="30sp" />

    </LinearLayout>



</RelativeLayout>